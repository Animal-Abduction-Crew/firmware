{{ ansible_managed | comment }}

[Unit]
Description=Rhasspy
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=/home/{{ rhasspy.rhasspy_user | default(rhasspy_user) }}/rhasspy
ExecStart=/bin/bash -lc './run-venv.sh --profile {{ rhasspy.rhasspy_lang | default(rhasspy_lang) }}'

RestartSec=1
Restart=on-failure

StandardOutput=syslog
StandardError=syslog

SyslogIdentifier=rhasspy

[Install]
WantedBy=default.target